/* pages/NoteContent/NoteContent.wxss */
page {
  background-image: linear-gradient(to top, #a8edea 0%, #fed6e3 100%);
}

.buttonClassDown {

  font-family: fantasy;
  font-weight: 600;
  position: fixed;
  bottom: 0;
  display: flex;
  width: 100%;
  justify-content: center;
  background-image: linear-gradient(40deg, #a8edea 0%, #50c9c3 100%);
}

.buttonClassUp {
  font-family: fantasy;
  font-weight: 600;
  position: fixed;
  bottom: 8vh;
  display: flex;
  width: 100%;
  justify-content: center;
  background-image: linear-gradient(40deg, #a8edea 0%, #50c9c3 100%);
}

.title {
  font-size: 25px;
  font-weight: 500;
  margin: 2px 2px 5px;
}

.time {
  font-size: 15px;
  font-weight: 100;
  margin: 1px 2px 8px;
}

.type-img {
  height: 30px;
  width: 30px;
  margin: 2px 8px 0px;
}
.container{
  width: 100%;
  
  display: flex;
  flex-direction: row;
  flex-wrap: wrap; 
  /* justify-content: flex-start | flex-end | center | space-between | space-around;*/
  justify-content: flex-start;
}
.flex-item{
  /* display: inline-block; 使得变为行业元素 */
  width:100%;
	height:150px;
  border-radius: 10rpx 10rpx;
  margin: 10rpx;
  
  transition: all 1s;
  backface-visibility: hidden;
  /* cursor: pointer; */
}
.flex-item2{
  /* display: inline-block; 使得变为行业元素 */
  width:30%;
	height:150px;
  border-radius: 10rpx 10rpx;
  margin: 10rpx;
 
  transition: all 1s;
  backface-visibility: hidden;
  /* cursor: pointer; */
  
}
